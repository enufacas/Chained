  "web_api_patterns": {
    "rest_apis": {
      "description": "Representational State Transfer - architectural style for distributed systems",
      "principles": [
        "Stateless communication",
        "Resource-based URLs",
        "Standard HTTP methods (GET, POST, PUT, DELETE)",
        "Cacheable responses",
        "Layered system architecture"
      ],
      "best_practices": [
        "Use nouns for resources, not verbs",
        "Version APIs explicitly",
        "Provide HATEOAS for discoverability",
        "Use proper HTTP status codes",
        "Implement pagination for collections"
      ]
    },
    
    "graphql_apis": {
      "description": "Query language for APIs with precise data fetching",
      "benefits": [
        "Single endpoint for all queries",
        "Client specifies exact data needed",
        "Strong typing with schema",
        "Real-time subscriptions",
        "Reduced over-fetching and under-fetching"
      ],
      "challenges": [
        "Caching complexity",
        "N+1 query problem",
        "Security considerations (query depth, complexity)",
        "Learning curve for teams"
      ]
    },
    
